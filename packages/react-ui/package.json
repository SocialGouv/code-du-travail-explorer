{
  "name": "@socialgouv/react-ui",
  "version": "4.2.0",
  "description": "Composants ReactJS",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "NODE_ENV=production rollup --config",
    "lint-js": "eslint src/**/*.js",
    "lint-css": "stylelint 'src/**/*.js'",
    "lint": "yarn lint-js && yarn lint-css",
    "prepush": "yarn lint && yarn test",
    "start": "start-storybook",
    "svg": "svgo --config=src/icons/mono.config.yaml -f src/icons/src/monochrome && svgo --config=src/icons/bi.config.yaml -f src/icons/src/bicolor && npx @svgr/cli --icon --no-dimensions -d src/icons/components src/icons/src",
    "build-storybook": "build-storybook -c .storybook -o .out",
    "watch": "yarn build --watch",
    "test": "jest"
  },
  "peerDependencies": {
    "prop-types": "15.x",
    "react": "16.x",
    "react-dom": "16.x",
    "styled-components": "4.x"
  },
  "dependencies": {
    "@reach/dialog": "0.7.1",
    "polished": "^3.4.2",
    "react-accessible-accordion": "^3.0.1",
    "react-feather": "^2.0.3",
    "react-tabs": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-export-namespace-from": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-react": "7.8.3",
    "@socialgouv/eslint-config-react": "^0.14.0",
    "@storybook/addon-a11y": "^5.3.7",
    "@storybook/addon-actions": "^5.3.7",
    "@storybook/addon-contexts": "^5.3.7",
    "@storybook/addon-storysource": "^5.3.7",
    "@storybook/addon-viewport": "^5.3.7",
    "@storybook/components": "^5.3.7",
    "@storybook/react": "^5.3.7",
    "@svgr/cli": "^5.1.0",
    "@svgr/core": "^5.0.1",
    "@testing-library/react": "^9.4.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "jest": "^24.9.0",
    "jest-styled-components": "^6.3.4",
    "npx": "^10.2.1",
    "prettier": "^1.19.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rollup": "^1.29.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "styled-components": "^4.4.1",
    "stylelint": "^13.0.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^4.0.0",
    "stylelint-processor-styled-components": "^1.9.0",
    "svgo": "^1.3.2"
  },
  "homepage": "https://github.com/SocialGouv/code-du-travail-numerique/packages/react-ui",
  "license": "MIT",
  "keywords": [
    "react",
    "ui"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!react-children-utilities)"
    ]
  },
  "browserslist": [
    "last 2 version",
    "> 1% in FR",
    "ie 11",
    "not dead"
  ]
}
