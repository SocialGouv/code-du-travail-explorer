{
  "name": "@socialgouv/cdtn-ui",
  "version": "4.45.0",
  "description": "Composants ReactJS",
  "homepage": "https://github.com/SocialGouv/code-du-travail-numerique/tree/master/packages/react-ui#react-ui-socialgouvreact-ui",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "sideEffects": false,
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "NODE_ENV=production rollup --config",
    "lint-css": "stylelint 'src/**/*.js'",
    "lint-js": "eslint src/**/*.js",
    "lint": "yarn lint-js && yarn lint-css",
    "precommit": "lint-staged",
    "prepush": "yarn test --bail --changedSince=master",
    "svg:bi": "npx svgo --config=src/icons/bi.config.yaml -f src/icons/src/bicolor && npx @svgr/cli --icon --no-dimensions -d src/icons/components src/icons/src",
    "svg:mono": "npx svgo --config=src/icons/mono.config.yaml -f src/icons/src/monochrome",
    "svg:react": "npx @svgr/cli --icon --no-dimensions -d src/icons/components src/icons/src",
    "svg": "yarn svg:mono && yarn svg:bi && yarn svg:react",
    "test": "jest",
    "watch": "yarn build --watch"
  },
  "peerDependencies": {
    "prop-types": "15.x",
    "react": "17.x",
    "react-dom": "17.x",
    "styled-components": "5.x"
  },
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@babel/preset-react": "^7.12.13",
    "@reach/dialog": "^0.13.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@socialgouv/eslint-config-react": "^1.59.0",
    "@testing-library/react": "^11.2.5",
    "@testing-library/react-hooks": "^5.1.0",
    "eslint": "^7.21.0",
    "jest": "^26.6.3",
    "jest-styled-components": "^7.0.3",
    "lint-staged": "^10.5.4",
    "polished": "^4.1.1",
    "prettier": "^2.2.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-accessible-accordion": "^3.3.4",
    "react-dom": "^17.0.1",
    "react-feather": "^2.0.9",
    "react-is": "^17.0.1",
    "react-tabs": "^3.2.1",
    "rollup": "^2.40.0",
    "styled-components": "^5.2.1",
    "stylelint": "^13.11.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^4.1.0",
    "stylelint-processor-styled-components": "^1.10.0",
    "use-onclickoutside": "^0.3.1"
  },
  "license": "MIT",
  "keywords": [
    "react",
    "ui"
  ],
  "lint-staged": {
    "src/**/*.js": [
      "yarn lint-css",
      "yarn lint-js --fix"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  },
  "browserslist": [
    "last 2 version",
    "> 1% in FR",
    "ie 11",
    "not dead"
  ]
}
