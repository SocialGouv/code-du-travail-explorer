{
  "enabled": true,
  "extends": [
    "github>SocialGouv/renovate-config"
  ],
  "schedule": ["after 10pm and before 5am on every weekday", "every weekend"],
  "packageRules": [
    {
      "packagePatterns": ["^@socialgouv/.*-(data|vdd)$"],
      "schedule": ["at any time"],
      "minor": {
        "groupName": "@socialgouv data packages",
        "automerge": true
      }
    },
    {
      "depTypeList": ["devDependencies"],
      "schedule": ["on the first day of the month, after 10pm before 5am"],
      "groupName": "dev-dependencies"
    },
    {
      "depTypeList": ["dependencies"],
      "excludePackagePatterns": ["^@socialgouv/.*-(data|vdd)$"],
      "schedule": ["on the first day of the month, after 10pm before 5am"],
      "groupName": "dependencies"
    }
  ]
}
