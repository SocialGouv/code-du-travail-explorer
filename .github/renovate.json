{
  "enabled": true,
  "extends": [
    "github>SocialGouv/renovate-config/light"
  ],
  "packageRules": [
    {
      "packagePatterns": ["^@socialgouv/.*-(data|vdd)$"],
      "schedule": ["at any time"],
      "minor": {
        "groupName": "@socialgouv data packages",
        "automerge": true
      }
    },
    {
      "excludePackagePatterns": ["^@socialgouv/.*-(data|vdd)$"],
      "schedule": ["every weekend"],
      "updateTypes": ["patch"],
      "groupName": "patch-dependencies",
      "automerge": true
    },
    {
      "depTypeList": ["devDependencies"],
      "schedule": ["after 9pm and before 6am on the first day of the month"],
      "groupName": "dev-dependencies"
    },
    {
      "depTypeList": ["dependencies"],
      "excludePackagePatterns": ["^@socialgouv/.*-(data|vdd)$"],
      "schedule": ["after 9pm and before 6am on the first day of the month"],
      "groupName": "dependencies"
    }
  ]
}
